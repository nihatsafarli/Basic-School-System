@using NotSistemi.Models.EntityFramework;
@model List<TBL_OGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-bordered">
    <tr>
        <th> OGRENCI ID </th>
        <th> AD </th>
        <th> SOYAD </th>
        <th> CİNSİYET </th>
        <th> KULÜP </th>
        <th> İŞLEMLER </th>
    </tr>
    <tbody>
        @foreach (var ogr in Model)
        {
            <tr>
                <td>@ogr.OGRENCIID</td>
                <td>@ogr.OGRAD</td>
                <td>@ogr.OGRSOYAD</td>
                <td>@ogr.OGRCINSIYET</td>
                <td>@ogr.TBL_KULUPLER.KULUPAD</td>
                <td>
                    <a href="/Ogrenciler/Sil/@ogr.OGRENCIID," class="btn btn-danger">Sil</a>
                    <a href="/Ogrenciler/OgrenciGetir/@ogr.OGRENCIID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Ogrenciler/YeniOgrenci" class="btn btn-primary ">Yeni Öğrenci Kaydı</a>

